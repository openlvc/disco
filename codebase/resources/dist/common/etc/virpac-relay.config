# =========================================
# VIRPAC Relay
# =========================================
#
# Central relay point configuration for VIRPAC network. Distributors at local sites
# can connect into this point to relay their traffic through.
#

# General Settingss
distributor.loglevel = INFO
distributor.logfile  = logs/distributor.log

# Link Settings
distributor.links = core, heartbeat

# Relay Configuration
distributor.core.mode            = relay
distributor.core.relay.address   = GLOBAL
distributor.core.relay.port      = 4919
distributor.core.relay.transport = tcp

# Test Tone Configuration
distributor.heartbeat.mode              = pulse
distributor.heartbeat.pulse.interval    = 5000
distributor.heartbeat.pulse.marking     = VIRPAC-RLY
distributor.heartbeat.pulse.enumeration = 1.5.0.1.0.0.0
distributor.heartbeat.pulse.exerciseId  = 1
distributor.heartbeat.pulse.siteId      = 0
distributor.heartbeat.pulse.appId       = 0

