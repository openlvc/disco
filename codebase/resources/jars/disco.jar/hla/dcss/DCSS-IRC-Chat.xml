<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<objectModel xsi:schemaLocation="http://standards.ieee.org/IEEE1516-2010 http://standards.ieee.org/downloads/1516/1516.2-2010/IEEE1516-DIF-2010.xsd" xmlns="http://standards.ieee.org/IEEE1516-2010" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelIdentification>
        <name>New Module</name>
        <type>FOM</type>
        <version>1.0</version>
        <securityClassification>unclassified</securityClassification>
        <purpose></purpose>
        <applicationDomain></applicationDomain>
        <description>Description of New Module</description>
        <useLimitation></useLimitation>
        <poc>
            <pocType>Primary author</pocType>
            <pocName>Michael Jobson</pocName>
            <pocOrg>Boeing Defence UK</pocOrg>
            <pocEmail>michael.i.jobson@boeing.com</pocEmail>
        </poc>
        <poc>
            <pocType></pocType>
            <pocName></pocName>
            <pocOrg></pocOrg>
        </poc>
        <other></other>
    </modelIdentification>
    <!--  ======================================================================= -->
    <!--                         Object Class Definitions                         -->
    <!--  ======================================================================= -->
    <objects>
        <objectClass>
            <name>HLAobjectRoot</name>
            <objectClass>
                <name>IRCServer</name>
                <sharing>Subscribe</sharing>
                <semantics>Represents core data held in an IRC Server.</semantics>
                <attribute>
                    <name>ServerId</name>
                    <dataType>HLAASCIIString</dataType>
                    <updateType>Static</updateType>
                    <updateCondition>NA</updateCondition>
                    <ownership>DivestAcquire</ownership>
                    <sharing>PublishSubscribe</sharing>
                    <transportation>HLAbestEffort</transportation>
                    <order>Receive</order>
                    <semantics>Unique ID for this IRC Server.</semantics>
                </attribute>
                <attribute>
                    <name>Channels</name>
                    <dataType>IRCChannelArray</dataType>
                    <updateType>On change</updateType>
                    <updateCondition>NA</updateCondition>
                    <ownership>DivestAcquire</ownership>
                    <sharing>PublishSubscribe</sharing>
                    <transportation>HLAbestEffort</transportation>
                    <order>Receive</order>
                    <semantics>List of channels that are active in the server.</semantics>
                </attribute>
                <attribute>
                    <name>ConnectedNicks</name>
                    <dataType>IRCNickArray</dataType>
                    <updateType>On change</updateType>
                    <updateCondition>NA</updateCondition>
                    <ownership>DivestAcquire</ownership>
                    <sharing>PublishSubscribe</sharing>
                    <transportation>HLAbestEffort</transportation>
                    <order>Receive</order>
                    <semantics>List of channels that are active in the server.</semantics>
                </attribute>
            </objectClass>
        </objectClass>
    </objects>


    <!--  ======================================================================= -->
    <!--                       Interaction Class Definitions                      -->
    <!--  ======================================================================= -->    
    <interactions>
        <interactionClass>
            <name>HLAinteractionRoot</name>
            <interactionClass>
                <name>Service</name>
                <!-- Class: IRCChannelMessage -->
                <interactionClass>
                    <name>IRCChannelMessage</name>
                    <sharing>PublishSubscribe</sharing>
                    <transportation>HLAreliable</transportation>
                    <order>Receive</order>
                    <semantics></semantics>
                    <parameter>
                        <name>ChannelName</name>
                        <dataType>HLAASCIIstring</dataType>
                        <semantics>The name of the IRC message channel</semantics>
                    </parameter>
                    <parameter>
                        <name>Sender</name>
                        <dataType>HLAASCIIstring</dataType>
                        <semantics>The name of the IRC sender</semantics>
                    </parameter>
                    <parameter>
                        <name>Message</name>
                        <dataType>HLAASCIIstring</dataType>
                        <semantics>The IRC message</semantics>
                    </parameter>
                    <parameter>
                        <name>TimeReceived</name>
                        <dataType>UnsignedInteger64</dataType> <!-- Changed by Tim -->
                        <semantics>Epoch timestamp sent at message transimission</semantics>
                    </parameter>
                    <!-- Added by Tim -->
                    <parameter>
                        <name>Origin</name>
                        <dataType>HLAASCIIString</dataType>
                        <semantics>ServerId of the origin server</semantics>
                    </parameter>
                </interactionClass>

                <!-- Class: IRCRawMessage -->
                <interactionClass>
                    <name>IRCRawMessage</name>
                    <sharing>PublishSubscribe</sharing>
                    <transportation>HLAreliable</transportation>
                    <order>Receive</order>
                    <semantics></semantics>
                    <parameter>
                        <name>Prefix</name>
                        <dataType>HLAASCIIstring</dataType>
                        <semantics></semantics>
                    </parameter>
                    <parameter>
                        <name>Command</name>
                        <dataType>HLAASCIIstring</dataType>
                        <semantics></semantics>
                    </parameter>
                    <parameter>
                        <name>CommandParameters</name>
                        <dataType>HLAASCIIstring</dataType>
                        <semantics></semantics>
                    </parameter>
                    <parameter>
                        <name>TimeReceived</name>
                        <dataType>UnsignedInteger64</dataType> <!-- Changed by Tim -->
                        <semantics>Epoch timestamp sent at message transimission</semantics> <!-- Changed by Tim -->
                    </parameter>
                    <!-- Added by Tim -->
                    <parameter>
                        <name>Sender</name>
                        <dataType>HLAASCIIstring</dataType>
                        <semantics>The IRC nick of the sender</semantics>
                    </parameter>
                    <!-- Added by Tim -->
                    <parameter>
                        <name>Origin</name>
                        <dataType>HLAASCIIString</dataType>
                        <semantics>ServerId of the origin server</semantics>
                    </parameter>

                </interactionClass>
            </interactionClass>
        </interactionClass>
    </interactions>
    <!--  ======================================================================= -->
    <!--                           Data Type Definitions                          -->
    <!--  ======================================================================= -->
    <dataTypes>
        <simpleDataTypes/>
        <enumeratedDataTypes/>
        <variantRecordDataTypes/>

        <!-- ==================== -->
        <!--    Array Datatypes   -->
        <!-- ==================== -->
        <arrayDataTypes>
            <arrayData>
                <name>IRCChannelArray</name>
                <dataType>IRCChannelStruct</dataType>
                <cardinality>Dynamic</cardinality>
                <encoding>HLAvariableArray</encoding>
                <semantics>List of channels that are available in an IRC Server.</semantics>
            </arrayData>
            <arrayData>
                <name>IRCNickArray</name>
                <dataType>HLAASCIIString</dataType>
                <cardinality>Dynamic</cardinality>
                <encoding>HLAvariableArray</encoding>
                <semantics>List of channels that are available in an IRC Server.</semantics>
            </arrayData>
        </arrayDataTypes>

        <!-- ==================== -->
        <!--     Fixed Records    -->
        <!-- ==================== -->
        <fixedRecordDataTypes>
            <fixedRecordData>
                <name>IRCChannelStruct</name>
                <encoding>HLAfixedRecord</encoding>
                <semantics>Data about an IRC channel contained in an IRC Server.</semantics>
                <field>
                    <name>Name</name>
                    <dataType>HLAASCIIString</dataType>
                    <semantics>Name of the channel.</semantics>
                </field>
                <field>
                    <name>Members</name>
                    <dataType>IRCNickArray</dataType>
                    <semantics>List of Nick's in a channel.</semantics>
                </field>
            </fixedRecordData>
        </fixedRecordDataTypes>

    </dataTypes>
    <dataTypes>
        <arrayDataTypes/>
        <fixedRecordDataTypes/>
    </dataTypes>
</objectModel>
